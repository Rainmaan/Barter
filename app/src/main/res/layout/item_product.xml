<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/no_image_template"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="Name"
        android:textAppearance="@style/ContentTextAppearance"
        app:layout_constraintBottom_toTopOf="@+id/product_asking"
        app:layout_constraintStart_toEndOf="@+id/product_image" />

    <TextView
        android:id="@+id/product_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Good as new"
        android:textAppearance="@style/TagTextAppearance"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/product_name"
        app:layout_constraintStart_toEndOf="@+id/product_name"
        app:layout_constraintTop_toTopOf="@+id/product_name" />

    <TextView
        android:id="@+id/product_asking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="Asking for: Ferrari"
        android:textAppearance="@style/ContentTextAppearance"
        android:textColor="@color/colorPrimaryGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="Baguio City, CAR"
        android:textAppearance="@style/TagTextAppearance"
        app:layout_constraintStart_toEndOf="@+id/product_image"
        app:layout_constraintTop_toBottomOf="@+id/product_asking" />

</androidx.constraintlayout.widget.ConstraintLayout>